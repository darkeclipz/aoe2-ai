   (can-train militiaman-line)
   =>
   (train militiaman-line)
   (set-goal g-time-to-train gv-ttt-spear) ;New in Training6
)

(defrule
   (goal g-train-spear gv-yes)
   (goal g-time-to-train gv-ttt-spear) ;New in Training6
   (can-train spearman-line)
   =>
   (train spearman-line)
   (set-goal g-time-to-train gv-ttt-sword) ;New in Training6
)

(defrule
   (goal g-train-spear gv-no)
   (goal g-time-to-train gv-ttt-spear) ;New Rule in Training6
   =>
   (set-goal g-time-to-train gv-ttt-sword)
)

(defrule
   (goal g-train-skirm gv-yes)
   (can-train skirmisher-line)
   =>
   (train skirmisher-line)
)

;New in Training6 - Train Unique Units if they are infantry.

(defrule
   (goal g-train-unique gv-yes)
   (or(current-age == imperial-age)
      (goal g-age-status gv-advancing-to-imperial))
   (can-train my-unique-unit-line)
